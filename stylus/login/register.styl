@import url(../header.css)
.login_bottom
	width 100%
	padding-top 25px
	box-sizing border-box
.login_user
	border-top: 1px solid #e1e1e1
	display flex
	position relative
	width 100%
	height 49px
	line-height 49px
	background #fff
	span
		padding-left 35px
		display inline-block
		background url(../../img/login/login_user.png) no-repeat 7px 12px
		background-size 25% 50%
	.login_user_fg
		flex 1
		input
			outline none
			width 100%
			border none
			font-size 18px
.login_user:after
	content ''
	position absolute
	background #F0F0F0
	left 10px
	right 10px
	height 1px
.login_code	
	border-top none	
	span
		background url(../../img/login/content_verify_icon@2x.png) no-repeat 9px 12px
		background-size 16% 50%
	.btn_code
		position absolute
		right 10px
		top 7px
		display inline-block
		width 90px
		height 35px
		border none
		border-radius 5px
		background #ea5404
		color #fff
		outline none
.login_pwd
	border-top none
	span
		background url(../../img/login/login_pwd.png) no-repeat 9px 12px
		background-size 20% 45%

.btn2
	outline none
	display block
	height 40px
	line-height 40px
	border none
	border-radius 5px
	color #fff
	font-size 18px
	width 90%
	margin 35px auto 0
	background #C7C7C7
		
.register_register
	text-align center
	outline none
	display block
	height 40px
	line-height 40px
	border none
	border-radius 5px
	color #fff
	font-size 18px
	width 90%
	margin 35px auto 0
	background #C7C7C7
.login_bottom
	.register
		display inline-block
		width 30%
		font-size 12px
		color orange
		float left
		margin-left 5px
	.forgetpwd
		float right
		margin-right 20px
		color #767677
		text-align right
.login_agent
	border-top none	
	span
		background url(../../img/login/content_position_icon@2x.png) no-repeat 9px 12px
		background-size 25% 45%
	.login_agent_shenfen
		width 65px
		.login_agent_id
			position absolute
			background url(../../img/login/xiangxia.png)no-repeat
			background-size contain
			width 20px
			height 15px
			top 15px
			right 10px			
		.login_agent_kind
			display none
			border-radius 5px
			background #a3a3a3
			width 65px
			height 145px
			position absolute
			top 35px
			right 10px
			li
				position relative
				text-indent initial
				display block
				height 28px	
				line-height 28px
				font-size 14px
				text-align center
				color #fff
				&:after
					content ''
					position absolute
					width 100%
					height 1px
					background #e6e6e6
					left 0 
					bottom -1px
			.login_agent_none
				&:after
					background none
.register_agreement
	margin-top 10px
	width 100%
	text-align center	
	font-size 14px
	span
		text-decoration underline
		color #ea6229
.register_bg
	display none
	position absolute
	top 0 
	bottom 0 
	left 0
	right 0
	background:rgba(0,0,0,0.2)
.register_bg_date
	position absolute
	left 20%
	right 20%
	top 30%
	bottom 50%
	background #fff
	border-radius 5%
	text-align center
.register_bg_success
	display block
	height 60px
	line-height 60px
	position relative
	&:after
		position absolute
		content ''
		left 0
		right 0
		height 1px
		bottom 1px
		background #e1e1e1
.register_bg_sure
	display block
	height 45px
	line-height 45px
	color #ec461f