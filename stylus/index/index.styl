@import url(../main-bottom.css)
body,ul,p
	margin 0
	padding 0
body
	background #efeff4
a
	list-style none
ul
	li
		list-style none
.index_top
	position absolute
	z-index 5
	top 0 
	left 0
	height 50px
	line-height 50px
	width 100%
	background url(../../img/index/banner_img_shadow@2x.png)no-repeat
	background-size 100% 50px
	color #fff
	text-align center

.index_top_area
	display inline-block
	float left
	width 63px
	text-align center
	background url(../../img/index/nav_icon_down@2x.png)no-repeat 50px 23px
	background-size 13px 6px
.index_top_name
	display inline-block
	margin-left -63px
.index_top1
	background #000
	position fixed
	display none
.index_search
	position absolute
	z-index 5
	top 50px
	left 5%
	right 5%
	height 33px
	line-height 33px
	background #f1f1f1
	border-radius 5px
	text-align center
	color #c5c5c5
	.search_details
		display inline-block
		background url(../../img/index/banner_icon_search@2x.png)no-repeat 0 7px
		background-size 20px
		padding-left 25px
.index_search1
	display block
	top 10px
	left 25%
	right 20%
	.search_details1
		font-size 12px
		background url(../../img/index/banner_icon_search@2x.png)no-repeat 0 9px
		background-size 15px
.index_slider
	overflow hidden
	height 280px
	width 100%
	position relative
	.slider_width
		width 400%
		height 100%
		.slider_list
			float left
			width 320px
			height 100%
		.slider_list1
			background url(../../img/index/banner_img@2x.png) no-repeat
			background-size contain
		.slider_list2
			background url(../../img/index/banner_img@2x.png) no-repeat
			background-size contain
		.slider_list3
			background url(../../img/index/banner_img@2x.png) no-repeat
			background-size contain
		.slider_list4
			background url(../../img/index/banner_img@2x.png) no-repeat
			background-size contain
	.slider_circle
		position absolute
		bottom 10px
		width 100%
		text-align center
		height 25px
		line-height 25px
		.circle_li
			display inline-block 
			width 20px
			height 20px
			background url(../../img/index/banner_icon_point_nor@2x.png)no-repeat center
			background-size 14px
		.circle_li_active
			background url(../../img/index/banner_icon_point_press@2x.png)no-repeat center
.index_select
	margin-top 10px
	width 100%
.index_select_top
	background #fff
	display flex
.index_select_top1
	z-index 15
	position fixed
	left 0 
	right 0
	top 50px
	border-bottom 1px solid #e1e1e1
.index_select_list
	flex 2
	text-align center
	height 50px
	line-height 50px
	position relative
	span
		background url(../../img/index/content_icon02_nor@2x.png) no-repeat 50% 90%
		background-size 10px 6px
		display inline-block
		width 100%
	&:after
		position absolute
		content ''
		width 1px
		height 18px
		right 0
		top 10px
		background #d6d7dc
	.index_select_list1
		background url(../../img/index/content_icon02_press@2x.png) no-repeat 50% 90%
		background-size 10px 6px
		color #ea5404
.index_select_list_hidden
	height 0
	display none
	transition all 0.5s		
.index_select_list_left
	margin-top 1px
	z-index 10
	position absolute
	width 320px
	display flex
	text-align left
	text-indent 10px
	.area_list
		overflow-y auto
		height 300px
		background #f0f0f0
		display inline-block
		flex 1		
		li
			height 45px
			line-height 45px	
		.area_list_active
			background #fff
	.area_list_detail
		display inline-block
		flex 1	
		background #fff
		li
			height 45px
			line-height 45px	
		.all
			color #ea5404
.index_select_bg
	flex 1
	display inline-block
	background url(../../img/index/content_icon01_nor@2x.png)no-repeat center
	background-size 18px
.index_show
	background #fff
	margin-bottom 10px
	height 115px
	border-top 1px solid #e1e1e1
	border-bottom 1px solid #e1e1e1
	padding 10px
	display flex
	box-sizing border-box
	.index_show_img
		flex 2
		margin-right 10px
		background url(../../img/index/content_img_list@2x.png)no-repeat center
		background-size contain
	.index_show_right
		position relative
		flex 3
		font-size 12px
		.index_show_right_title
			font-size 18px
			margin-top 5px
			margin-bottom 5px
			font-weight bold
			background url(../../img/index/collect_icon_nor@2x.png)no-repeat right 50%
			background-size 16px
		.index_show_right_title1
			background url(../../img/index/collect_icon_press@2x.png)no-repeat right 50%
			background-size 16px
		.index_show_right_busniess
			display block
			border-radius 5px
			width 80px
			height 20px
			line-height 20px
			text-align center
			border 1px solid #ea5404
			margin-top 5px
			color #ea5404
		.index_show_right_price
			display inline-block
			color #ea5404
			font-size 16px
			margin-right 5px
		.index_show_right_commission
			float right
			display inline-block
			margin-top 3px
.index_show_right_bg
	position fixed
	background url(../../img/index/content_btn_back@2x.png)no-repeat
	background-size 50px
	bottom 65px
	right 25px
	width 50px
	height 50px
.index_show_bottom
	width 100%
	overflow hidden
.index_select_list_bg
	position absolute
	top 300px
	left 0
	right 0
	bottom 0
	height 200px
	background #000
		