@import url(../header.css)
.login_bottom
	width 100%
	padding-top 25px
	box-sizing border-box
.login_user
	border-top: 1px solid #e1e1e1
	display flex
	position relative
	width 100%
	height 49px
	line-height 49px
	background #fff
	text-indent 2px
	span
		padding-left 30px
		display inline-block
		background url(../../img/login/login_user.png) no-repeat 7px 12px
		background-size 25% 50%
	div
		flex 1
		text-align left
		input
			outline none
			border none
			font-size 18px
.login_user:after
	content ''
	position absolute
	background #F0F0F0
	left 10px
	right 10px
	height 1px
.login_pwd
	border-top none
	span
		background url(../../img/login/login_pwd.png) no-repeat 9px 12px
		background-size 20% 45%
.btn1
	outline none
	display block
	height 40px
	line-height 40px
	border none
	border-radius 5px
	color #fff
	font-size 18px
	width 90%
	margin 35px auto 0
	background #C7C7C7
.login_bottom
	.register
		display inline-block
		width 30%
		font-size 12px
		color orange
		float left
		margin-left 5px
	.forgetpwd
		float right
		margin-right 20px
		color #767677
		text-align right
