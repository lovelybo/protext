@import url(../header.css)
.agent_info_data
	height 197px
	width 100%
	border-top 1px solid #e1e1e1
	background #fff
	.agent_info_data_touxiang
		width 175px
		margin auto
		height 120px
		padding-top 95px
		box-sizing border-box
		text-align center
		background url(../../img/me/touxiang.png) no-repeat 45px 15px
		background-size 80px
	.zuoyouming
		display block
		width 100%
		text-align center
		font-size 14px
	.agent_editor
		display block
		width 100px
		height 30px
		line-height 30px
		border 1px solid #ea5404
		color #ea5404
		border-radius 5px
		margin 10px auto
		text-align center
		font-size 12px
.agent_info_bottom
	padding 0 10px
	margin-top 10px
	background #fff
	.company
		display flex
		height 33px
		line-height 33px
		font-size 14px
		border-bottom 1px solid #e1e1e1
		.mycompany
			display inline-block
			margin-right 10px
			flex 1
		.details
			display inline-block
			flex 4
		.details1
			background url(../../img/me/touxiang.png) no-repeat 0 2px
			background-size 30px
	.company1
		position relative
		&:after
			position absolute 
			content ''
			background url(../../img/me/nav_icon_back@2x.png) no-repeat 
			background-size contain
			right 0
			top 10px
			width 15px
			height 15px
.agent_info_card
	display flex
	margin-top 25px
	.agent_info_li
		flex 1
		text-align center
		.agent_card_bg
			width 90px
			margin auto
			height 64px
			background #878787
			border-radius 5px
		p
			margin 10px 0 
			font-size 14px
			
	